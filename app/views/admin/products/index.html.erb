<div class='container px-5 px-sm-0'>
  <div class="row">
      <div>
        <%= link_to '+', new_admin_product_path, class: 'btn btn-outline-dark' %>
      </div>

      <h1>商品一覧</h1>
      <table class="table">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |f| %>
          <tr>
            <td><%= f.id %></td>
            <td><%= link_to f.name, admin_product_path(f) %></td>
            <td><%= f.price %></td>
            <td><%= f.genre.name %></td>
            <td align="left">
              <% if f.is_active %>
                <span>販売中</span>
              <% else %>
                <span>販売停止中</span>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <div><%= paginate @products %></div>

  </div>
</div>