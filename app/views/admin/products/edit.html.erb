<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>商品編集</h1>
      <%= form_with model:@product, url: "/admin/products", local:true do |f| %>
        <div class="form-group">
          <%= f.label :"商品画像" %>
          <%= f.file_field :product_image, class: "form-control-file product_image", accept: 'image/*' %>
        </div>
        <div class="form-group">
          <%= f.label :"商品名" %>
          <%= f.text_field :name, class: "form-control name" %>
        </div>
        <div class="form-group">
          <%= f.label :"商品説明" %>
          <%= f.text_area :introduction, class: "form-control introduction" %>
        </div>
        <div class="form-group">
          <%= f.label :"ジャンル" %>
        </div>
        <div class="form-group">
          <%= f.label :"税抜価格" %>
          <%= f.text_field :price, class: "form-control price" %>円
        </div>
        <div class="form-group">
          <%= f.label :"販売ステータス" %>
        </div>
        <div>
          <%= f.submit "変更を保存", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>