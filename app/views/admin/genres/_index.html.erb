<table class="table table-background">
  <thead>
    <tr>
      <th></th>
      <th>ジャンル</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% genres.each do |genre| %>
    <tr>
      <td></td>
      <td><%= genre.name %></td>
      <td></td>
      <td><%= link_to "編集する", edit_admin_genre_path(genre.id), remote: true, class: "btn btn-outline-success" %></td>
      <td><%= link_to "削除する", admin_genre_path(genre.id), remote: true, method: :delete, class: "btn btn-outline-danger" %></td>
    </tr>
    <% end %>
  </tbody>
</table>