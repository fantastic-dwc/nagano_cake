<h1>ジャンル一覧・追加</h1>

<%= form_with model:@genre, url: "/admin/genres" do |f| %>
<div>
  <a>ジャンル名</a>
  <%= f.text_field :name, placeholder: "ジャンル名" %>
  <%= f.submit '新規登録', class: "btn btn-primary" %>
  <% end %>
</div>

<div class="px-5 mx-5 row">
  <table class="table col-4 table-background">
    <thead>
      <tr>
        <th></th>
        <th>ジャンル</th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
      <tr>
        <td></td>
        <td><%= genre.name %></td>
        <td></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
