<div class="ml-5 pi-5 pt-5">
  <h3 class="ml-5">ジャンル一覧・追加</h3>

  <%= form_with model:@genre, url: "/admin/genres" do |f| %>
  <div class="pt-4 form-inline">
    <div>ジャンル名</div>
    <div class="pl-5"><%= f.text_field :name, placeholder: "ジャンル名" %></div>
    <div class="pl-5"><%= f.submit '新規登録', class: "btn btn-primary" %></div>
    <% end %>
  </div>

  <div class="row pt-4">
    <table class="table col-4 table-background">
      <thead>
        <tr>
          <th></th>
          <th>ジャンル</th>
          <th colspan="2"></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td></td>
          <td><%= genre.name %></td>
          <td></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>