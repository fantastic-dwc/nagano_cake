<div class='container mt-5'>
  <div class='row'>
    <div class='col-md-12'>
      <%= flash[:notice] %>
      <h3>注文履歴詳細</h3>
        <table class='table'>
          <tr>
            <th>購入者</th>
            <td><%= @order.customer.last_name + @order.customer.first_name %></td>
          </tr>
          <tr>
            <th>注文日</th>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th>配送先</th>
            <td>
              <%= @order.postcode %><%= @order.address %><br>
              <%= @order.name %>
            </td>
          </tr>
          <tr>
            <th>支払方法</th>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
            <th>支払ステータス</th>
            <td>
              <%= form_with model: @order, url: admin_order_path(@order), method: :patch do |f| %>
                <%= f.select :order_status, Order.order_statuses_i18n.invert, {prompt: false} %>
                <%= f.submit "更新", class: 'btn btn-sm btn-success' %>
              <% end %>
            </td>
          </tr>
        </table>


        <table class='table'>
          <thead>
            <tr>
              <th>商品名</th>
              <th>単価（税込）</th>
              <th>数量</th>
              <th>小計</th>
              <th colspan='5'>制作ステータス</th>
            </tr>
            <% @order_products.each do |f| %>
            <tr>
              <td><%= f.product.name %></td>
              <td><%= (f.product.price * 1.1).floor %></td>
              <td><%= f.quantity %></td>
              <td><%= (f.product.price * 1.1).floor * f.quantity %></td>
              <td><%= form_with model: f, url: admin_order_product_path(f), method: :patch do |f| %>
                    <%= f.select :production_status, OrderProduct.production_statuses_i18n.invert, {prompt: false} %>
                    <%= f.submit "更新", class: 'btn btn-sm btn-success' %>
                  <% end %>
              </td>
            </tr>
            <% end %>
          </thead>
        </table>


        <table class='table'>
          <tr>
            <th>商品合計</th>
            <td>
              <% @order_products.each do |f| %>
                <% @subtotal += (f.product.price * 1.1).floor * f.quantity %>
              <% end %>
              <%= @subtotal %>
            </td>
          </tr>
          <tr>
            <th>送料</th>
            <td><%= @order.shipping_fee %></td>
          </tr>
          <tr>
            <th>請求額合計</th>
            <td><%= @order.total_price %></td>
          </tr>
        </table>
    </div>
  </div>
</div>
