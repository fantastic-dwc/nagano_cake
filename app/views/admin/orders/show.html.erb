<div class='container mt-5'>
  <div class='row'>
    <div class='col-md-12'>
      <h1>注文履歴詳細</h1>
        <table class='table'>
          <tr>
            <th>購入者</th>
            <td></td>
          </tr>
          <tr>
            <th>注文日</th>
            <td></td>
          </tr>
          <tr>
            <th>配送先</th>
            <td></td>
          </tr>
          <tr>
            <th>支払方法</th>
            <td></td>
          </tr>
          <tr>
            <th>支払ステータス</th>
            <td></td>
          </tr>
        </table>

        <% @order.each do |f| %>
        <table class='table'>
          <thead>
            <tr>
              <th>商品名</th>
              <th>単価（税込）</th>
              <th>数量</th>
              <th>小計</th>
              <th colspan='5'>制作ステータス</th>
            </tr>
            <tr>
              <td><%= f.name %></td>
              <td><%= f.order_producs.price %></td>
              <td><%= f.quantity %></td>
              <td><%= f.price %></td>
              <td></td>
              <td>
                <div><%= f.submit "更新", class: 'btn btn-sm btn-success' %></div>
              </td>
            </tr>
          </thead>
        </table>
        <% end %>

        <table class='table'>
          <tr>
            <th>商品合計</th>
            <td></td>
          </tr>
           <tr>
            <th>送料</th>
            <td></td>
          </tr>
           <tr>
            <th>請求額合計</th>
            <td></td>
          </tr>
        </table>
    </div>
  </div>
</div>
