<div class='container mt-5'>
  <div class='row'>
    <div class='col-md-12'>
      <h3>注文履歴一覧</h3>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>購入日</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <% @orders.each do |f| %>
        <tbody>
          <tr onclick='window.location="<%= '/admin/orders/' + f.id.to_s %>"' role="link" %>
            <td><%= f.created_at.strftime('%Y/%m/%d %H:%M') %></td>
            <td><%= f.customer.last_name + f.customer.first_name %></td>
            <td><%= f.order_products.all.sum(:quantity) %></td>
            <td><%= f.order_status_i18n %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
      <%= paginate @orders %>
    </div>
  </div>
</div>

