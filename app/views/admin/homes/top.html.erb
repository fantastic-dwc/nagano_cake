<div class='container mt-5'>
  <div class='row'>
    <div class='col-md-12'>
      <h1>注文履歴一覧</h1>
      <table class="table">
        <thead>
          <tr>
            <th>購入日</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |f| %>
          <tr>
            <td><%= link_to f.created_at.strftime('%Y/%m/%d %H:%M'), admin_order_path(f.id) %></td>
            <td><%= f.customer.last_name + f.customer.first_name %></td>

            <td><%= f.order_status_i18n %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>

