<div class='container'>
  <div class='row'>
    <div class='col-md-2'>
      <table class="table">
        <tr><th>ジャンル検索</th></tr>
        <tr>
          <td><%= link_to "全商品", products_path, class: "text-black-50" %></td>
        </tr>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= link_to genre.name, products_path(name: genre.id), class: "text-black-50" %></td>
        </tr>
        <% end %>
      </table>
    </div>
    <div class='col-md-10'>
      <h1 class="m-3">商品一覧</h1>
      <div class="row no-padding card-wrapper">
          <% @products.each do |product| %>
            <div class="card w-25 mt-4 shadow-lg">
            <%= link_to product_path(product) do %>
              <%= image_tag product.get_product_image, size: "200x200", class:"card-img-top" %>
                <div class="card-body text-black-50">
                  <div class="row">
                    <div class="col-md-12">
                      <p class="card-title"><%= product.name %></p>
                      <p class="card-text">¥<%= product.price %></p>
                    </div>
                  </div>
                </div>
            <% end %>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>
