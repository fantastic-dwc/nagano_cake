<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-12'>
      <h1>商品一覧</h1>
      <%= @products.each do |product| %>
        <%= link_to product_path(product) do %>
          <%= image_tag product.product_image %>
          <%= product.name %>
          ¥<%= product.price %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>