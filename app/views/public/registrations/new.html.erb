<div class='mt-5 container'>
  <h2>新規会員登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="form-group row">
      <div class="col-md-2">名前</div>
        <%= f.label :last_name, "(姓)", class: "col-md-1" %>
        <%= f.text_field :last_name, autofocus: true, class: "col-md-2" %>
        <%= f.label :first_name, "(名)", class: "col-md-1" %>
        <%= f.text_field :first_name, class: "col-md-2" %>
    </div>

    <div class="form-group row">
      <div class="col-md-2">フリガナ</div>
        <%= f.label :last_name_kana, "(セイ)", class: "col-md-1" %>
        <%= f.text_field :last_name_kana, class: "col-md-2" %>
        <%= f.label :first_name_kana, "(メイ)", class: "col-md-1" %>
        <%= f.text_field :first_name_kana, class: "col-md-2" %>
    </div>

    <div class="form-group row">
      <%= f.label :email, "メールアドレス",class: "col-md-3" %><br />
      <%= f.email_field :email, autocomplete: "email",class: "col-md-2" %>
    </div>

    <div class="form-group row">
      <%= f.label :postcode, "郵便番号(ハイフンなし)", class: "col-md-3" %>
      <%= f.text_field :postcode, class: "col-md-2" %>
    </div>

    <div class="form-group row">
      <%= f.label :address, "住所", class: "col-md-3" %>
      <%= f.text_field :address, class: "col-md-5" %>
    </div>

    <div class="form-group row">
      <%= f.label :tel, "電話番号(ハイフンなし)", class: "col-md-3" %>
      <%= f.telephone_field :tel, class: "col-md-2" %>
    </div>

    <div class="form-group row">
      <div class="col-md-3">
        <%= f.label :password, "パスワード" %>
        <% if @minimum_password_length %>
          (<%= @minimum_password_length %> 文字以上)
        <% end %><br />
      </div>
      <%= f.password_field :password, autocomplete: "new-password", class: "col-md-2" %>
    </div>

    <div class="form-group row">
      <%= f.label :password_confirmation, "パスワード(確認用)" , class: "col-md-3"%>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-md-2" %>
    </div>

    <div class="actions m-2">
      <%= f.submit "新規登録" , class: "btn btn-success col-md-offset-6" %>
    </div>
  <% end %>

  <h3 class="mt-7">既に登録済みの方</h3>
    <%= render "public/shared/links" %>
</div>