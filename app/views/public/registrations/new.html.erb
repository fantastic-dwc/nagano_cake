<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-12'>
      <h2>新規会員登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="m-2 form-inline">
          <div class="col-md-2">名前</div>
          <div class="field form-inline">
            <%= f.label :last_name, "(姓)" %>
            <%= f.text_field :last_name, autofocus: true %>
          </div>
          <div class="field form-inline">
            <%= f.label :first_name, "(名)" %>
            <%= f.text_field :first_name %>
          </div>
        </div>

       <div class="m=2 form-inline">
          <div class="col-md-2">フリガナ</div>
          <div class="field form-inline">
            <%= f.label :last_name_kana, "(セイ)" %>
            <%= f.text_field :last_name_kana %>
          </div>
          <div class="field form-inline">
            <%= f.label :first_name_kana, "(メイ)" %>
            <%= f.text_field :first_name_kana %>
          </div>
        </div>

        <div class="field m-2 form-inline">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autocomplete: "email" %>
        </div>

        <div class="field m-2 form-inline">
          <%= f.label :postcode, "郵便番号(ハイフンなし)" %>
          <%= f.text_field :postcode %>
        </div>

        <div class="field m-2 form-inline">
          <%= f.label :address, "住所" %>
          <%= f.text_field :address %>
        </div>

        <div class="field m-2 form-inline">
          <%= f.label :tel, "電話番号(ハイフンなし)" %>
          <%= f.telephone_field :tel %>
        </div>

        <div class="field m-2 form-inline">
          <%= f.label :password, "パスワード" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field m-2 form-inline">
          <%= f.label :password_confirmation, "パスワード(確認用)" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録" , class: "btn btn-success" %>
        </div>
      <% end %>

      <h3>既に登録済みの方</h3>
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>