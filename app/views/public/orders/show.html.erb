<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-12'>
      <h2>注文履歴詳細</h2>
    </div>
  </div>
  <div class='row'>
    <div class='col-md-7'>
      <h4>注文情報</h4>
      <table class="table table-bordered">
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>
            <%= @order.postcode %></br><%= @order.address %></br>
          </td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method %></td>
        </tr>
        <tr>
          <th>ステータス</th>
          <td><%= @order.order_status %></td>
        </tr>
      </table>
    </div>
    <div class="col-md-5">
      <h4>請求情報</h4>
      <table class="table table-bordered">
        <tr>
          <th>商品合計</th>
          <td><%= @order.total_price %></td>
        </tr>
        <tr>
          <th>配送料</th>
          <td><%= @order.shipping_fee %></td>
        </tr>
        <tr>
          <th>ご請求額</th>
          <td><%= @order.total_price + @order.shipping_fee %></td>
        </tr>
      </table>
    </div>
  </div>
  <div>
    <div class="col-md-12">
      <h4>注文内容</h4>
      <table class="table table-bordered">
        <tr>
          <th>商品</th>
          <th>単価(税込)</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
        <% @order.order_products.each do |product| %>
        <tr>
            <td><%= product.product.name %></td>
            <td><%= (product.price*1.1).floor %></td>
            <td><%= product.quantity %></td>
            <td><%= (product.price*1.1).floor * product.quantity %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>