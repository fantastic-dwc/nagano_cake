<h1>注文情報入力</h1>
<h6>支払方法</h6>
<%= form_with model: @order, url: confirm_path, method: :post do |f| %>
  <%= f.radio_button :payment_method, "credit_card" %>
  <%= f.label :payment_method, "クレジットカード" %><br>
  <%= f.radio_button :payment_method, "transfer" %>
  <%= f.label :payment_method, "銀行振込" %>

<h6>お届け先</h6>
  <%= f.radio_button :select_address, 0 %>
  <%= f.label :select_address_0, "ご自身の住所" %>
  <%= current_customer.postcode %>
  <%= current_customer.address %>
<br>
  <%= f.radio_button :select_address, 1 %>
  <%= f.label :select_address_1, "登録済住所から選択" %>
  <div class="form-group">
    <%= f.select :address_id, options_from_collection_for_select(ShippingAddress.all, :id, :address_display) %>
  </div>
<br>
  <%= f.radio_button :select_address, 2 %>
  <%= f.label :select_address_2, "新しいお届け先" %>
  <div class="form-group">
  <%= f.label :postcode, "郵便番号（ハイフンなし）" %>
  <%= f.text_field :postcode %>
  <div class="form-group">
  <%= f.label :address, "住所" %>
  <%= f.text_field :address %>
  <div class="form-group">
  <%= f.label :name, "宛名" %>
  <%= f.text_field :name %>
  </div>
  <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
<% end %>

