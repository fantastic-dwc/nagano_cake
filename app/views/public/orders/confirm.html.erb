<div class='container px-5 px-sm-0'>
  <div class='row'>

    <h1>注文情報確認</h1>
      <% @cart_products.each do |f| %>
       <div class='col-md-8'>
        <table class="table">
          <thead>
            <tr>
              <th>商品名</th>
              <th>単価(税込)</th>
              <th>数量</th>
              <th>小計</th>
              </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= f.product.name %></td>
              <td><%= (f.product.price * 1.1).floor %></td>
              <td><%= f.quantity %></td>
              <td><%= (f.product.price * 1.1).floor * f.quantity %></td>
            </tr>
          </tbody>
        </table>
       </div>

       <div class='col-md-3 offset-md-1'>
        <table class="table">
          <tr>
            <th>送料</th>
            <td><%= @fee %></td>
          </tr>
          <tr>
            <th>商品合計</th>
            <td><%= f.subtotal %></td>
          </tr>
          <tr>
            <th>請求金額</th>
            <td><%= @total_price + @fee %></td>
          </tr>
        </table>
       </div>
      <% end %>


      <table class="table">
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <th>お届け先</th>
          <td>
            <%= "〒" + @order.postcode %><%= @order.address %><br>
            <%= @order.name %>
          </td>
        </tr>
      </table>
    <%= form_with model: @order, url: orders_path, method: :post do |f| %>
      <%= f.hidden_field :customer_id, :value => current_customer.id %>
      <%= f.hidden_field :postcode %>
      <%= f.hidden_field :address %>
      <%= f.hidden_field :name %>
      <%= f.hidden_field :total_price, :value => @total_price + @fee %>
      <%= f.hidden_field :shipping_fee %>
      <%= f.hidden_field :payment_method %>
      <%= f.submit "注文を確定する", class: 'btn btn-success' %>
    <% end %>
  </div>
</div>