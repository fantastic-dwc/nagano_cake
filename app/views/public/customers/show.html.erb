<div class='container'>
  <div class='row'>
    <div class='col-md-12'>
      <h1 class="m-3">マイページ</h1>
        <table class="table table-borderless">
          <th style="width: 10%">登録情報</th>
          <td><%= link_to "編集する", edit_customers_path, class: "btn btn-success" %></td>
        </table>
      <table class="table">
        <tr>
          <th style="width: 30%">氏名</th>
          <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
        </tr>
        <tr>
          <th>カナ</th>
          <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postcode %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.tel %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </table>
      <table class="table table-borderless">
        <tr>
          <th style="width: 10%">配送先</th>
          <td><%= link_to "一覧を見る", shipping_addresses_path, class: "btn btn-primary" %></td>
        </tr>
        <tr>
          <th>注文履歴</th>
          <td><%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %></td>
        </tr>
      </table>
    </div>
  </div>
</div>